{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": false,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "always"
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 80,
    "indentWidth": 3,
    "indentStyle": "space",
    "lineEnding": "lf",
    "formatWithErrors": true
  }
}
